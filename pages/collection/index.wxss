/* pages/collection/index.wxss */

.root {
   width: 100vw;
    height: 100vh;
    background-color: var(--bgColor);
    position: relative;
}

.background-image{
   height : 100%;
    position: absolute;
    width: 100%;
    left: 0px;
    top: 0px;
}
.content{
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0px;
    top: 0px;
    display: flex
}
.left{
  flex: 3;
  background-color: white;
  opacity: 0.7;
}

.menuitem{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.active{
  background-color: var(--themeColor);
  color: white
}
.right{
  flex:10;
}
.list{
  display: flex;
  flex-wrap: wrap;

}
.carditem{
  width: 50%;
  text-align: center;
  margin-top: 10rpx;
}
.image{
  width: 80%
}
.loading{
  width:25%;
 position: relative;
 top:-250rpx
}

.number{
  font-size: 25rpx
}
.text{
  text-align: center;
  margin: 20rpx;
}
