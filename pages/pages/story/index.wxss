/* pages/achievement/index.wxss */

.root {
   width: 100vw;
    height: 100vh;
    background-color: var(--bgColor);
    position: relative;
}

.background-image{
    height : 100%;
    position: absolute;
    width: 100%;
    left: 0px;
    top: 0px;
}
.content{
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0px;
    top: 0px;
    text-align: center
}
.list{
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center
}
.charactorgroupe{
  background-color: var(--bgColor)
}

.menuitem{
  background-color: #FEFCF0;
  border: 12rpx solid var(--themeColor);
  padding: 30rpx;
  width: 80vw;
  margin-top:30rpx;
  margin-bottom: 10rpx;
  border-radius: 450rpx;
  font-size: 40rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  box-shadow: 10rpx 14rpx 9rpx gainsboro
}
.news{
  width:65rpx;
  margin-left: 15rpx
}
.image{
  width:210rpx
}
.progress{
  margin-top: 20rpx;
  width:55vw;
  margin-left: 35rpx
}
.up{
  display: flex;
  justify-content: center;
  align-items: center
}
