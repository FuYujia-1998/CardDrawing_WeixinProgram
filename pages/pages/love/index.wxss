/* pages/love/index.wxss */
.root {
   width: 100vw;
    height: 100vh;
    background-color: var(--bgColor);
    position: relative;
}

.background-image{
   height : 100%;
    position: absolute;
    width: 100%;
    left: 0px;
    top: 0px;
}
.content{
   position: absolute;
    width: 100%;
    height: 100%;
    left: 0px;
    top: 0px;
    display: flex;
    flex-direction: column;
}
.top{
  flex: 2;
  display: flex;
}
.left{
  flex: 6;
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  margin-left: 20rpx;
  margin-right: 10rpx
}
.line1{
  display: flex;
  margin-bottom: 20rpx;
  align-items: center;
  background: rgba(255, 153, 153,0.8);
 border: 4rpx solid white;
 color: white;
 font-size: 45rpx;
}
.line1,.line2{
  padding-top: 10rpx;
  padding-bottom: 20rpx;
}
.jiban{
  margin-left: 13rpx;
}
.line2{
  display: flex;
  align-items: center;
  justify-content: space-between;
 background: rgba(255, 153, 153,0.8);
 border: 4rpx solid white;
 color: white;
 font-size: 35rpx;
}
.rank{
  margin-left: 13rpx;
}
.call{
margin-right: 13rpx;
}
.right{
  margin-top: 30rpx;
  margin-right: 15rpx;
  margin-left: 10rpx;
  flex: 1;
  text-align: center
}
.middle{
  flex:5;
}

.progress{
  width:45vw;
}
.button{
  background-color: var(--themeColor);
  padding-top: 28rpx;
  padding-bottom: 28rpx;
  margin-bottom: 20rpx;
  border-radius: 300rpx;
  color: white
}


.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: black;
    opacity: 0.5;
    z-index: 9000;
  
}

.modalcall,.modalbg,.modaldiary,.modalhudong{
    width: 80vw;
    
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
   padding-top: 20rpx;
   padding-bottom: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    background-color: white;
    border: 3rpx solid var(--themeColor)

}

.go{
  border: 3rpx solid black;
  border-radius: 15rpx;
  color: black;
  margin-top: 10rpx;
  padding: 10rpx;
  width:160rpx;
  text-align: center
}
.inputcall{
  margin-top: 10rpx;
  border: 3rpx solid gray;
  width:80%;
