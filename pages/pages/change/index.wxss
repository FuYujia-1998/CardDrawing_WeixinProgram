/* pages/change/index.wxss */
.root {
   width: 100vw;
    height: 100vh;
    background-color: var(--bgColor);
    position: relative;
}

.background-image{
   height : 100%;
    position: absolute;
    width: 100%;
    left: 0px;
    top: 0px;
}
.content{
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0px;
    top: 0px;
    display: flex;
    flex-direction: column;
}
.top{
  
  
  flex: 2.2;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;

}
.lineone{
  

  margin-top: 20rpx;
 width:88vw;
 display: flex;
 align-items: center;
 
}
.rank{
  margin-left: 40rpx
}
.linetwo{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
  width:88vw
}
.ticketimage{
  width: 70rpx;
  margin-left: 40rpx
}
.ticketnum{
  
 margin-left: 10rpx
}
.question{
 
  background-color: white;
  border: 4rpx solid var(--themeColor);
  padding: 15rpx;
  margin-right: 15rpx
}
