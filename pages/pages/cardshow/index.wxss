/* pages/cardshow/index.wxss */ 
.root {
   width: 100vw;
    height: 100vh;
    background-color: var(--bgColor);
    position: relative;
}

.background-image{
   height : 100%;
    position: absolute;
    width: 100%;
    left: 0px;
    top: 0px;
}
.content{
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0px;
    top: 0px;
    display: flex
}
.onecontainer{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute
}
.onecard{
  top: -100rpx;
  z-index: 1;
  width:55vw;
  opacity: 0;
  position: relative
}
.oneactive{
margin-right: -140rpx;

}
.onecardnew{
  position: relative;
 
  top:-400rpx;
  right:-40rpx;
  width:140rpx;
  z-index: 999;
 
}
.tencontainer{
  padding-top: 23rpx;
  padding-bottom: 23rpx;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-content: space-around;
  flex-wrap: wrap;
}
.tenlist{
  position: relative;
  width:33.33%;
  height:25%;
  display: flex;
  justify-content: center;
  align-items: center
}
.tencard{
  position: absolute;
  z-index: 1;
  width:72%;
  opacity:0
}
.tenactive{
  
margin-right: -40rpx;
}
.tencardnew{
  position: absolute;
  width:40rpx;
