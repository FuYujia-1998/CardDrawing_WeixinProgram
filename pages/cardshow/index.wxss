/* pages/cardshow/index.wxss */ 
.root {
   width: 100vw;
    height: 100vh;
    background-color: var(--bgColor);
    position: relative;
}

.background-image{
   height : 100%;
    position: absolute;
    width: 100%;
    left: 0px;
    top: 0px;
}
.content{
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0px;
    top: 0px;
    display: flex
}
.onecontainer{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.onecard{
  margin-top: -160rpx;
  width:55vw;
  opacity: 0
}
.tencontainer{
  padding-top: 23rpx;
  padding-bottom: 23rpx;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-content: space-around;
  flex-wrap: wrap;
}
.tenlist{
  width:33.33%;
  height:25%;
  display: flex;
  justify-content: center;
  align-items: center
}
.tencard{
  width:65%;
  opacity:0
}
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}

.modalDlg{
    width: 580rpx;
    height: 900rpx;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    margin: -450rpx 85rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.showcard{
  width:540rpx;
  height: 810rpx;
}
.go{
  border: 3rpx solid white;
  border-radius: 15rpx;
  color: white;
  margin-top: 30rpx;
  padding: 10rpx;
  width:160rpx;
  text-align: center
}